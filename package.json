{
	"name": "virtual_art_gallery",
	"description": "Explore a virtual art gallery",
	"version": "1.0.0",
	"scripts": {
		"start": "budo src/webindex.js",
		"build:js": "browserify -p tinyify src/index.js > build/virtual-art-gallery.js",
		"build:html": "browserify -p tinyify src/webindex.js | htmlify base.html > build/index.html",
		"build": "npm run build:js && npm run build:html",
		"prebuild": "rm -rf build && mkdir build"
	},
	"license": "MIT",
	"dependencies": {
		"@babel/runtime": "^7.14.8",
		"babel-core": "7.0.0-bridge.0",
		"gl-mat4": "^1.2.0",
		"gl-vec3": "^1.1.3",
		"pointer-lock": "^0.0.4",
		"regl": "^1.7.0"
	},
	"devDependencies": {
		"@babel/core": "^7.15.0",
		"@babel/plugin-transform-runtime": "^7.15.0",
		"@babel/preset-env": "^7.15.0",
		"babelify": "^10.0.0",
		"browserify": "^16.5.2",
		"budo": "^11.6.4",
		"inline-htmlify": "^2.0.1",
		"tinyify": "^3.0.0",
		"uglify-js": "^3.14.1"
	},
	"browserify": {
		"transform": [
			"babelify"
		]
	}
}
